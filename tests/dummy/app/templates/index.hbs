{{#nypr-player
  sound                 = model.sound
  currentTitle          = model.metadata.title
  backdropImageUrl      = model.metadata.imageURL as |content|}}

  {{#content.for 'trackInfo' as |args|}}
    {{model.metadata.title}}
  {{/content.for}}

  {{#content.for 'streamInfo' as |args|}}
    {{integration.streamName}}
  {{/content.for}}

  {{#content.for 'aux' as |args|}}
    {{args.queueButton
      queueLength           = 0
      showModal             = (action 'showModal')
      closeModal            = (action 'closeModal')
      isOpenModal           = modal}}
  {{/content.for}}

{{/nypr-player}}
